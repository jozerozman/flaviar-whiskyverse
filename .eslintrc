{
	"root": true,
	"extends": ["airbnb-base", "prettier"],
	"rules": {
		"max-len": [
			"error",
			140,
			2,
			{
				"ignoreUrls": true,
				"ignoreComments": false,
				"ignoreRegExpLiterals": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true
			}
		],
		"no-console": "off",
		"func-names": "off",
		"no-useless-constructor": "off",
		"no-unused-vars": "off",
		"no-undef": "off",

    "import/order": "off",
    "import/no-extraneous-dependencies": "off"
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	}
}
